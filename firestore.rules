rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read/write for all authenticated requests from the app
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Appointments collection
    match /appointments/{appointmentId} {
      allow read, write: if true;
    }
    
    // Services collection
    match /services/{serviceId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Masters collection
    match /masters/{masterId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Config collection
    match /config/{configId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
